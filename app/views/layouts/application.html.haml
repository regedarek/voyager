!!!
%html
  %head
    %title Voyager
    = stylesheet_link_tag    "application" 
    = javascript_include_tag "application" 
    = csrf_meta_tags 
  %body
    - if flash[:notice]
      = flash[:notice]

    - if current_user
      Logged in as #{current_user.email}
      = link_to "Log out", logout_path
    - else
      = link_to "Sign up", signup_path
      = link_to "Log in", login_path

    %hr
    = yield
