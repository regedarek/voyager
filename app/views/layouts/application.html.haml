!!!
%html
  %head
    %title Voyager
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header
      .container
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}", :class=>"alert-message error"
        - if current_user
          Logged in as #{current_user.email}

        %br
        %nav.signup
          - if current_user
            = link_to "Log out", main_app.logout_path
            |
            = link_to "Profile", main_app.edit_user_path(current_user)
            |
            = link_to "Inbox", main_app.messages_path
          - else
            = link_to "Sign up", main_app.signup_path
            |
            = link_to "Log in", main_app.login_path
            %br
            = link_to 'Login with Twitter', auth_at_provider_path(:provider => :twitter)
        %br

        %nav.navigation
          = link_to "Home", root_path
          |
          = link_to "Users", main_app.users_path
          |
          = link_to "Forum", main_app.forem_path
    .main
      .container
        Main
        = yield

    %footer
      .container
        Currently active users: #{current_users_list}

